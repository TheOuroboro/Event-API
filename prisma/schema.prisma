generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ORGANIZER
  ATTENDEE
}

enum EventStatus {
  DRAFT
  PUBLISHED
  CANCELLED
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}

model User {
  id        String @id @default(uuid()) @db.Uuid
  email     String   @unique
  password  String
  role      Role
  events    Event[]
  bookings  Booking[]
  createdAt DateTime @default(now())
}

model Event {
  id              String       @id @default(uuid()) @db.Uuid
  title           String
  description     String
  location        String
  date            DateTime
  ticketPrice     Float
  totalSeats      Int
  remainingSeats  Int
  status          EventStatus
  organizerId     String       @db.Uuid
  organizer       User         @relation(fields: [organizerId], references: [id])
  bookings        Booking[]
  createdAt       DateTime     @default(now())

  @@index([date])
  @@index([organizerId])
}

model Booking{
  id    String            @id @default(uuid())
  eventId String          @db.Uuid
  userId String           @db.Uuid
  quantity Int
  status BookingStatus
  createdAt DateTime       @default(now())


  event      Event         @relation(fields: [eventId], references: [id])

  user       User          @relation(fields: [userId], references: [id])

  @@unique([eventId, userId])
  @@index([userId])

}